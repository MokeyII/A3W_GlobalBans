<Window x:Name="A3W_Global_Ban" x:Class="A3W_Bans.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A3W_Bans"
        mc:Ignorable="d"
        Title="A3W Global Bans (Early Alpha)" Height="500" Width="750" ResizeMode="NoResize" WindowStartupLocation="Manual" BorderThickness="0" BorderBrush="Black" Foreground="Black" Background="Black">

    <Grid>
        <DataGrid x:Name="dgBansList" Margin="10,10,10,51" RenderTransformOrigin="0.5,0.5"/>
        <Button x:Name="btnSearchDB" Content="Search" Margin="10,0,0,10" Height="36" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75"/>
        <Button x:Name="btnMainSubmitBan" Content="Submit A Global Ban" Margin="0,0,10,10" Click="btnMainSubmitBan_Click" HorizontalAlignment="Right" Width="127" Height="36" VerticalAlignment="Bottom"/>
        <Label x:Name="lblInstructions" Content="Click on the Text Field then Hit ''CTRL+A'' to select all, followed by ''CTRL+C'' to copy., Then Paste it into a text file." HorizontalAlignment="Left" Margin="141,420,0,0" VerticalAlignment="Top" FontSize="8" Background="Black" Foreground="White"/>
    </Grid>
</Window>
